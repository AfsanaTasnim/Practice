<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Teachers<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("AllTeacher", "Index", "AllTheTeacher")</li>
                            <li>@Html.ActionLink("ClassOne", "ClassOneTeacher", "AllTheTeacher")</li>
                            <li>@Html.ActionLink("ClassTwo", "ClassTwoTeacher", "Home")</li>
                            <li>@Html.ActionLink("ClassThree", "ClassThreeTeacher", "Home")</li>
                            <li>@Html.ActionLink("ClassFour", "ClassFourTeacher", "Home")</li>
                            <li>@Html.ActionLink("ClassFive", "ClassFiveTeacher", "Home")</li>
                            <li>@Html.ActionLink("ClassSix", "ClassSixTeacher", "Home")</li>
                            <li>@Html.ActionLink("ClassSeven", "ClassSevenTeacher", "Home")</li>
                            <li>@Html.ActionLink("ClassEight", "ClassEightTeacher", "Home")</li>
                            <li>@Html.ActionLink("ClassNine", "ClassNineTeacher", "Home")</li>
                            <li>@Html.ActionLink("ClassTen", "ClassTenTeacher", "Home")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">All Notices<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Notices", "Index", "Notice")</li>
                            <li>@Html.ActionLink("Holidays", "Index", "Holiday")</li>
                            <li>@Html.ActionLink("Events", "Index", "Event")</li>
                        </ul>
                    </li>
                   
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Results<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Physics", "Index", "Phy")</li>
                            <li>@Html.ActionLink("Chemistry", "Index", "Chem")</li>
                            <li>@Html.ActionLink("Maths", "Index", "Math")</li>
                            <li>@Html.ActionLink("Biology", "Index", "Bio")</li>
                            <li>@Html.ActionLink("English", "Index", "Eng")</li>
                            <li>@Html.ActionLink("Bangla", "Index", "Bang")</li>
                            <li>@Html.ActionLink("ICT", "Index", "IT")</li>
                            <li>@Html.ActionLink("Religion", "Index", "Rel")</li>
                            <li>@Html.ActionLink("SocialScience", "Index", "Social")</li>
                        </ul>
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
